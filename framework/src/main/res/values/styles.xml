<?xml version="1.0" encoding="utf-8"?>

<resources>


    <style name="Layout" />

    <style name="Layout.WRAP_CONTENT">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Layout.MATCH_PARENT">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="ImageView" />

    <style name="ImageView.Avatar" />

    <style name="ImageView.Avatar.Large">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="ImageView.Avatar.Medium">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="ImageView.Avatar.Small">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
    </style>


    <style name="ListView">
        <item name="android:dividerHeight">2px</item>
        <item name="android:divider">@drawable/divider</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:listSelector">@drawable/standard_selector</item>
        <item name="android:drawSelectorOnTop">true</item>
    </style>

    <style name="ListSpinner">
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">900</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:maxWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxHeight">40dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="ListItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/standard_selector</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/semitransparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="transparent">
        <item name="android:visibility">gone</item>
    </style>

    <style name="TextView" />

    <style name="TextView.DropShadow">
        <item name="android:shadowColor">@color/light_text_shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">0.1</item>
    </style>


    <style name="Button" parent="android:Widget.Button">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">@dimen/holo_touchable_item_height</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:foreground">?android:listSelector</item>
    </style>

    <style name="Button.WideButton" parent="Button">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Button.LandingBlurb" parent="Button">
        <item name="android:textSize">22.0sp</item>
        <item name="android:textColor">@color/landing_info_text</item>
        <item name="android:padding">3.0dip</item>
        <item name="android:shadowColor">@color/landing_info_text_shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

    <style name="Button.Borderless" parent="Button">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingRight">4dip</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <style name="Button.Borderless.Invert" parent="Button">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingRight">4dip</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <style name="Button.Borderless.Small" parent="Button.Borderless">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

</resources>