    <style name="SettingText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/table_text</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="SignInEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoText">false</item>
        <item name="android:capitalize">none</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/table_text</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="ShadowText">
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="AvatarLarge">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="AvatarMedium">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="AvatarSmall">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="ListView">
        <item name="android:dividerHeight">2px</item>
        <item name="android:divider">@drawable/bootstrap_divider</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="ListSubtitleText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/table_text_light</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Custom Spinner -->
    <style name="Spinner">
        <item name="android:indeterminate">true</item>
        <!--<item name="android:indeterminateDrawable">@drawable/spinner</item>-->
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="ListSpinner" parent="Spinner">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="ListItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/list_item_background</item>
    </style>

    <style name="BootstrapButton">
        <item name="android:background">@drawable/button_background_states</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TimerChronometer">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">75sp</item>
        <item name="android:textColor">#464646</item>
    </style>



    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/semitransparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="transparent">
        <item name="android:visibility">gone</item>
    </style>

    <style name="Widget.Holo.CompoundButton" parent="@android:style/Widget.CompoundButton" />

    <style name="TextAppearance.HoloCompat.Button" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:textSize">18.0sp</item>
    </style>

    <style name="Button.Keyboard" parent="@android:style/Widget.Button">
        <item name="android:textSize">@dimen/keyboard_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.5</item>
    </style>

    <style name="TextView" />

    <style name="TextView.Message">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">@color/medium_text</item>
        <item name="android:shadowColor">@color/dark_text_shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.5</item>
    </style>

    <style name="TextView.Message.Small" parent="@style/TextView.Message">
        <item name="android:textSize">14.0dip</item>
    </style>

    <style name="TextView.Message.Bold" parent="@style/TextView.Message">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Message.Dark" parent="@style/TextView.Message">
        <item name="android:textColor">@color/dark_text</item>
    </style>

    <style name="TextView.Message.Dark.Bold" parent="@style/TextView.Message.Dark">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.Message.Light" parent="@style/TextView.Message">
        <item name="android:textColor">@color/light_text</item>
        <item name="android:shadowColor">@color/light_text_on_dark_background_shadow</item>
        <item name="android:shadowDy">-0.6</item>
    </style>

    <style name="TextView.Message.Light.Bold" parent="@style/TextView.Message.Light">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.DropShadow">
        <item name="android:shadowColor">@color/light_text_shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">0.1</item>
    </style>

    <style name="TextAppearance.LandingButton" parent="@style/TextAppearance.HoloCompat.Button">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.LandingBlurb">
        <item name="android:textSize">22.0sp</item>
        <item name="android:textColor">@color/landing_info_text</item>
        <item name="android:padding">3.0dip</item>
        <item name="android:shadowColor">@color/landing_info_text_shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">2.0</item>
    </style>

</resources>